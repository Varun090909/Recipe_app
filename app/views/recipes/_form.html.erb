
<%= form_with model: recipe do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
    <% form.object.errors.full_messages_for(:name).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
  <%= form.label :description %><br>
  <%= form.text_field :description %>
  <% form.object.errors.full_messages_for(:description).each do |message| %>
    <div><%= message %></div>
  <% end %>
</div>

  <div>
    <%= form.submit %>
  </div>
<% end %>